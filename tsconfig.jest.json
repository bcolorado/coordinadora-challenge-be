{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["ES2016"],
    "types": ["node", "jest"],

    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@framework/*": ["framework/*"],
      "@adapters/*": ["adapters/*"],
      "@shared/*": ["shared/*"]
    },

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
